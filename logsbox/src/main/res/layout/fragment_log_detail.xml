<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:fillViewport="true"
    tools:context=".detail.LogDetailFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logBox_section_title_bg"
            android:elevation="2dp"
            android:padding="8dp"
            android:textAllCaps="true"
            android:id="@+id/title"
            android:textColor="@color/logBox_section_title_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logBox_section_title_bg"
            android:padding="8dp"
            android:text="@string/request_title"
            android:textAllCaps="true"
            android:textColor="@color/logBox_section_title_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logBox_section_title_bg"
            android:padding="8dp"
            android:text="@string/response_title"
            android:textAllCaps="true"
            android:textColor="@color/logBox_section_title_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAllCaps="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>